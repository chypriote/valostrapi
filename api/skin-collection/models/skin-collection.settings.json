{
  "kind": "collectionType",
  "collectionName": "skin_collections",
  "info": {
    "name": "SkinCollection"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "added": {
      "type": "date",
      "required": true
    },
    "weapon_skins": {
      "collection": "weapon-skin",
      "via": "skin_collection"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "picture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
